	  \iffirstsection
	  \firstsectionfalse
	  \edef\mark@section{##1}
	  \lhead{\mark@section\\\mark@section}
	  \fi
  }

  \renewcommand{\chaptermark}[1]{\setchaptermark{\chaptername~\thechapter.~~##1}}
  \renewcommand{\sectionmark}[1]{\setsectionmark{\thesection~~##1}}
