  \typeout{^^J}%
%    \end{macrocode}
%
% We do not need the temporary definitions any more.
%
%    \begin{macrocode}
  \let\pagesLTS@tmpA\undefined%
  \let\pagesLTS@tmpB\undefined%
  }

