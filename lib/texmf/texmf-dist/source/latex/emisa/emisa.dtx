        \hskip #1\relax
        \noindent%
        \parbox[t]{\linewidth}{%
          \raggedright\interlinepenalty\@M#5\strut}\@@par}%
    \endgroup
  \else
    \def\@svsechd{#4{\hskip #1\relax #5}}%
  \fi
  \@xsect{#3}}
%    \end{macrocode}
% \end{macro}
