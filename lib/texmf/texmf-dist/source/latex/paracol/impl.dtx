% \begin{macro}{\@outputpage}
% \changes{v1.3-2}{2013/09/17}
%	{Redefined for parallel-paging.}
% \changes{v1.3-3}{2013/09/17}
%	{Redefined for background painting.}
% \changes{v1.3-4}{2013/09/17}
