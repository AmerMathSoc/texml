  \ifmmode\ifpcol@inner\else
    \ifnum\pcol@mcid=\z@ \gdef\pcol@colorstack@mpushed{}\fi
    \ifnum\pcol@mcid<\pcol@mcpushlimit\relax
      \expandafter\aftergroup
        \csname pcol@reset@color@mpop@\number\pcol@mcid\endcsname
      \expandafter\xdef
