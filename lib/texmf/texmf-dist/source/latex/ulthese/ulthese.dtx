    \copy\UL@subtitlebox
    \vspace{\UL@docidspacing}
    \UL@docid
    \vspace{\UL@authorspacing}
    {\UL@fontauthor\UL@author}\par
    \UL@details
    \vfill
    {\textcopyright} \UL@author, \UL@year\par
    \ifthenelse{\boolean{UL@isexam}}{}{%
      \clearpage
      \ifnum\UL@typenum>1\relax
      \vspace*{0pt}\par
