        \else              \global\let\@gtempa\adl@cdlineb\fi
        \global\adl@clb#2\relax
        \global\advance\adl@clb-\adl@cla \ifnum0=`{\fi}}
\def\adl@cdlinea{\multispan\adl@cla &\multispan\adl@clb \unskip}
\def\adl@cdlineb{\multispan\adl@clb \unskip}
