\ifdef\hebrewdate
{%
  \newrobustcmd*\DTMhebrewdate[3]{\hebrewdate{#3}{#2}{#1}}%
}%
{%
  \ifdef\hebdate
  {%
    \newrobustcmd*\DTMhebrewdate[3]{\hebdate{#3}{#2}{#1}}%
  }%
