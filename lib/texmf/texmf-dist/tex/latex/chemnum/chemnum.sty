    log .default:n = true ,
    log .groups:n = {general} ,
    show-keys .choice: ,
    show-keys / true .code:n =
      \bool_set_true:N \l__chemnum_show_def_bool
      \bool_set_true:N \l__chemnum_show_ref_bool ,
    show-keys / false .code:n =
      \bool_set_false:N \l__chemnum_show_def_bool
