  <body id="ltxid2">
    <sec disp-level="1" id="ltxid3" specific-use="section">
      <p>hello, world</p>
      <algo-algo>
        <algo-require>
          <inline-formula content-type="math/tex">
            <tex-math>n \geq 0</tex-math>
          </inline-formula>
        </algo-require>
        <algo-ensure>
          <inline-formula content-type="math/tex">
            <tex-math>y = x^n</tex-math>
          </inline-formula>
        </algo-ensure>
        <algo-line>
          <algo-state>
            <inline-formula content-type="math/tex">
              <tex-math>y \leftarrow 1</tex-math>
            </inline-formula>
          </algo-state>
        </algo-line>
        <algo-line>
          <algo-state>
            <inline-formula content-type="math/tex">
              <tex-math>X \leftarrow x</tex-math>
            </inline-formula>
          </algo-state>
        </algo-line>
        <algo-line>
          <algo-state>
            <inline-formula content-type="math/tex">
              <tex-math>N \leftarrow n</tex-math>
            </inline-formula>
          </algo-state>
        </algo-line>
        <algo-while>
          <algo-line>
            <inline-formula content-type="math/tex">
              <tex-math>N \neq 0</tex-math>
            </inline-formula>
          </algo-line>
          <algo-if>
            <algo-line>
              <inline-formula content-type="math/tex">
                <tex-math>N</tex-math>
              </inline-formula> is even</algo-line>
            <algo-line>
              <algo-state>
                <inline-formula content-type="math/tex">
                  <tex-math>X \leftarrow X \times X</tex-math>
                </inline-formula>
              </algo-state>
            </algo-line>
            <algo-line>
              <algo-state>
                <inline-formula content-type="math/tex">
                  <tex-math>N \leftarrow N / 2</tex-math>
                </inline-formula>
              </algo-state>
            </algo-line>
          </algo-if>
          <algo-if type="else">
            <algo-line>
              <algo-state>
                <inline-formula content-type="math/tex">
                  <tex-math>y \leftarrow y \times X</tex-math>
                </inline-formula>
              </algo-state>
            </algo-line>
            <algo-line>
              <algo-state>
                <inline-formula content-type="math/tex">
                  <tex-math>N \leftarrow N - 1</tex-math>
                </inline-formula>
              </algo-state>
            </algo-line>
          </algo-if>
        </algo-while>
      </algo-algo>
    </sec>
  </body>
