  <body id="ltxid2">
    <sec disp-level="1" id="ltxid3" specific-use="section">
      <p>hello, world</p>
      <alg:algorithm>
        <alg:require>
          <inline-formula content-type="math/tex">
            <tex-math>n \geq 0</tex-math>
          </inline-formula>
        </alg:require>
        <alg:ensure>
          <inline-formula content-type="math/tex">
            <tex-math>y = x^n</tex-math>
          </inline-formula>
        </alg:ensure>
        <alg:line>
          <alg:state>
            <inline-formula content-type="math/tex">
              <tex-math>y \leftarrow 1</tex-math>
            </inline-formula>
          </alg:state>
        </alg:line>
        <alg:line>
          <alg:state>
            <inline-formula content-type="math/tex">
              <tex-math>X \leftarrow x</tex-math>
            </inline-formula>
          </alg:state>
        </alg:line>
        <alg:line>
          <alg:state>
            <inline-formula content-type="math/tex">
              <tex-math>N \leftarrow n</tex-math>
            </inline-formula>
          </alg:state>
        </alg:line>
        <alg:while>
          <alg:condition>
            <alg:line>
              <inline-formula content-type="math/tex">
                <tex-math>N \neq 0</tex-math>
              </inline-formula>
            </alg:line>
          </alg:condition>
          <alg:if>
            <alg:condition>
              <alg:line>
                <inline-formula content-type="math/tex">
                  <tex-math>N</tex-math>
                </inline-formula> is even</alg:line>
            </alg:condition>
            <alg:line>
              <alg:state>
                <inline-formula content-type="math/tex">
                  <tex-math>X \leftarrow X \times X</tex-math>
                </inline-formula>
              </alg:state>
            </alg:line>
            <alg:line>
              <alg:state>
                <inline-formula content-type="math/tex">
                  <tex-math>N \leftarrow N / 2</tex-math>
                </inline-formula>
              </alg:state>
            </alg:line>
          </alg:if>
          <alg:if type="else">
            <alg:line>
              <alg:state>
                <inline-formula content-type="math/tex">
                  <tex-math>y \leftarrow y \times X</tex-math>
                </inline-formula>
              </alg:state>
            </alg:line>
            <alg:line>
              <alg:state>
                <inline-formula content-type="math/tex">
                  <tex-math>N \leftarrow N - 1</tex-math>
                </inline-formula>
              </alg:state>
            </alg:line>
          </alg:if>
        </alg:while>
      </alg:algorithm>
      <alg:algorithm>
        <alg:line>
          <alg:state>
            <inline-formula content-type="math/tex">
              <tex-math>a \leftarrow 1</tex-math>
            </inline-formula>
          </alg:state>
        </alg:line>
        <alg:if>
          <alg:condition>
            <alg:line>
              <inline-formula content-type="math/tex">
                <tex-math>a</tex-math>
              </inline-formula> is even</alg:line>
          </alg:condition>
          <alg:line>
            <alg:state>
              <bold>print</bold> “<inline-formula content-type="math/tex"><tex-math>a</tex-math></inline-formula> is even”</alg:state>
          </alg:line>
        </alg:if>
        <alg:if type="else">
          <alg:line>
            <alg:state>
              <bold>print</bold> “<inline-formula content-type="math/tex"><tex-math>a</tex-math></inline-formula> is odd”</alg:state>
          </alg:line>
        </alg:if>
      </alg:algorithm>
    </sec>
