      <sec disp-level="2" id="ltxid16" specific-use="subsection">
        <label>1.12</label>
        <title>The Infinite Loop</title>
        <alg:algorithm linenodelimiter=":">
          <alg:loop>
            <alg:condition>
              <alg:line lineno="1">
                <alg:statement>
                  <bold>loop</bold>
                </alg:statement>
                <alg:comment>comment</alg:comment>
              </alg:line>
            </alg:condition>
            <alg:block>
              <alg:line lineno="2">
