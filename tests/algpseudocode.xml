      <sec disp-level="2" id="ltxid12" specific-use="subsection">
        <label>1.8</label>
        <title>The <italic toggle="yes">if-then-else</italic> Statement</title>
        <alt-title>The if-then-else Statement</alt-title>
        <alg:algorithm linenodelimiter=":">
          <alg:if>
            <alg:condition>
              <alg:line lineno="1">
                <alg:statement><bold>if</bold> some condition is true <bold>then</bold></alg:statement>
                <alg:comment>comment</alg:comment>
              </alg:line>
            </alg:condition>
            <alg:block>
              <alg:line lineno="2">
                <alg:statement>do some processing</alg:statement>
              </alg:line>
            </alg:block>
            <alg:elsif>
              <alg:condition>
                <alg:line lineno="3">
                  <alg:statement><bold>else</bold> <bold>if</bold> some other condition is true <bold>then</bold></alg:statement>
                  <alg:comment>comment</alg:comment>
                </alg:line>
              </alg:condition>
              <alg:block>
                <alg:line lineno="4">
                  <alg:statement>do some different processing</alg:statement>
                </alg:line>
              </alg:block>
            </alg:elsif>
            <alg:elsif>
              <alg:condition>
                <alg:line lineno="5">
                  <alg:statement><bold>else</bold> <bold>if</bold> some even more bizarre condition is met <bold>then</bold></alg:statement>
                  <alg:comment>comment</alg:comment>
                </alg:line>
              </alg:condition>
              <alg:block>
                <alg:line lineno="6">
                  <alg:statement>do something else</alg:statement>
                </alg:line>
              </alg:block>
            </alg:elsif>
            <alg:else>
              <alg:line lineno="7">
                <alg:statement>
                  <bold>else</bold>
                </alg:statement>
                <alg:comment>comment</alg:comment>
              </alg:line>
              <alg:block>
                <alg:line lineno="8">
                  <alg:statement>do the default actions</alg:statement>
                </alg:line>
              </alg:block>
            </alg:else>
            <alg:line lineno="9">
              <alg:statement><bold>end</bold> <bold>if</bold></alg:statement>
            </alg:line>
          </alg:if>
        </alg:algorithm>
      </sec>
      <sec disp-level="2" id="ltxid13" specific-use="subsection">
        <label>1.9</label>
        <title>The <italic toggle="yes">for</italic> Loop</title>
        <alt-title>The for Loop</alt-title>
        <alg:algorithm linenodelimiter=":">
          <alg:for>
            <alg:condition>
              <alg:line lineno="1">
                <alg:statement><bold>for</bold> <inline-formula content-type="math/tex"><tex-math>i=0</tex-math></inline-formula> to <inline-formula content-type="math/tex"><tex-math>10</tex-math></inline-formula> <bold>do</bold></alg:statement>
                <alg:comment>comment</alg:comment>
              </alg:line>
            </alg:condition>
            <alg:block>
              <alg:line lineno="2">
                <alg:statement>carry out some processing</alg:statement>
              </alg:line>
            </alg:block>
            <alg:line lineno="3">
              <alg:statement><bold>end</bold> <bold>for</bold></alg:statement>
            </alg:line>
          </alg:for>
        </alg:algorithm>
        <alg:algorithm linenodelimiter=":">
          <alg:forall>
            <alg:condition>
              <alg:line lineno="1">
                <alg:statement><bold>for all</bold> <inline-formula content-type="math/tex"><tex-math>i</tex-math></inline-formula> such that <inline-formula content-type="math/tex"><tex-math>0\leq i\leq 10</tex-math></inline-formula> <bold>do</bold></alg:statement>
                <alg:comment>comment</alg:comment>
              </alg:line>
            </alg:condition>
            <alg:block>
              <alg:line lineno="2">
                <alg:statement>carry out some processing</alg:statement>
              </alg:line>
            </alg:block>
            <alg:line lineno="3">
              <alg:statement><bold>end</bold> <bold>for</bold></alg:statement>
            </alg:line>
          </alg:forall>
        </alg:algorithm>
      </sec>
      <sec disp-level="2" id="ltxid14" specific-use="subsection">
        <label>1.10</label>
        <title>The <italic toggle="yes">while</italic> Loop</title>
        <alt-title>The while Loop</alt-title>
        <alg:algorithm linenodelimiter=":">
          <alg:while>
            <alg:condition>
              <alg:line lineno="1">
                <alg:statement><bold>while</bold> some condition holds <bold>do</bold></alg:statement>
                <alg:comment>comment</alg:comment>
              </alg:line>
            </alg:condition>
            <alg:block>
              <alg:line lineno="2">
                <alg:statement>carry out some processing</alg:statement>
              </alg:line>
            </alg:block>
            <alg:line lineno="3">
              <alg:statement><bold>end</bold> <bold>while</bold></alg:statement>
            </alg:line>
          </alg:while>
        </alg:algorithm>
      </sec>
      <sec disp-level="2" id="ltxid15" specific-use="subsection">
        <label>1.11</label>
        <title>The <italic toggle="yes">repeat-until</italic> Loop</title>
        <alt-title>The repeat-until Loop</alt-title>
        <alg:algorithm linenodelimiter=":">
          <alg:repeat>
            <alg:condition>
              <alg:line lineno="1">
                <alg:statement>
                  <bold>repeat</bold>
                </alg:statement>
                <alg:comment>comment</alg:comment>
              </alg:line>
            </alg:condition>
            <alg:block>
              <alg:line lineno="2">
                <alg:statement>carry out some processing</alg:statement>
              </alg:line>
            </alg:block>
            <alg:until>
              <alg:condition>
                <alg:line lineno="3">
